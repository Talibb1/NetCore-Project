@using Entities.ViewModel.Identity.UserVM
@model UserListVM

@{
    ViewData["Title"] = "View";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
    }

    .container {
        width: 400px;
        margin: 100px auto;
        background-color: #fff;
        border-radius: 5px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        color: #333;
    }

    p {
        margin-bottom: 20px;
        padding: 0 20px;
    }
</style>
@if (Model != null)
{
    <h3 class="text-danger">User Details</h3>


    <form>

        <div class="container">
            <h2>User Data</h2>

            <div class="row">

                <div class="col-12">

                    <p> User Id: <b>@Model.Id</b></p>
                </div>

            </div>
            <div class="row">

                <div class="col-10">

                    <p> User Name: <b>@Model.UserName</b></p>
                </div>

            </div>

            <div class="row">

                <div class="col-12">

                    <p> User Email: <b>@Model.Email</b></p>
                </div>

            </div>

            <div class="row">

                <div class="col-12">

                    <p> User Password: <b>@Model.PasswordHash.Substring(0,7)</b></p>
                </div>

            </div>
        

            <!-- Add more user data here as needed -->
        </div>





    </form>
}
else
{
    <h3 class="text-danger">Something went wrong please try again</h3>
}
